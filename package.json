{
	"name": "plexxd",
	"version": "1.0.0",
	"description": "A terminal multiplexer for managing package.json scripts in monorepos and single-package projects",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"plexxd": "./plexxd"
	},
	"scripts": {
		"dev": "bun run src/index.tsx",
		"dobuild": "bun build src/index.tsx --outfile=plexxd --compile --target=bun-darwin-arm64",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --fix",
		"build": "bun typecheck && bun lint && bun dobuild"
	},
	"keywords": [
		"terminal",
		"multiplexer",
		"tui",
		"monorepo",
		"workspace",
		"pnpm",
		"npm",
		"yarn",
		"turborepo",
		"scripts",
		"process-manager"
	],
	"author": "mckamyk",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mckamyk/plexxd.git"
	},
	"homepage": "https://github.com/mckamyk/plexxd#readme",
	"bugs": {
		"url": "https://github.com/mckamyk/plexxd/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"files": [
		"plexxd",
		"README.md",
		"LICENSE"
	],
	"dependencies": {
		"@opentui/core": "^0.1.77",
		"@opentui/react": "^0.1.77",
		"@tanstack/react-store": "^0.8.0",
		"@tanstack/store": "^0.8.0",
		"js-yaml": "^4.1.1",
		"react": "^19.2.4"
	},
	"devDependencies": {
		"@types/bun": "^1.3.8",
		"@types/js-yaml": "^4.0.9",
		"@types/react": "^19.2.10",
		"typescript": "^5.9.3"
	}
}
